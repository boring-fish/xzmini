/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 93px;
  background: skyblue;
  color: white;
  width: 280px;
  height: 104px;
  text-align: center;
  line-height: 50px;
  border-radius: 20px;
  font-family: "楷体";
  font-size:18px;
  animation: word 3s infinite;
}
.touchme{
  border-radius:100%;
  width:100px;
  height:56px;
  background: #fcbdaa;
  font-family: "Arial";
  color:white;
  font-family: "楷体";
  font-size:20px;
  text-align: center;
  line-height:50px;
  animation: see 3s infinite;
}
@keyframes see{
   0% {
     transform: rotateX(0deg);
   }
    50% {
     transform: rotateX(360deg);
   }
    100% {
     transform:rotateX(0deg);
   }
}
@keyframes word{
   0% {
     transform: translateY(-50px);
   }
    100% {
     transform: translateY(50px);
   } 
}